@model IEnumerable<EventManagerMVC.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "Consolidated Bookings View";
}

@{
    var searchTerm = Context.Request.Query["searchTerm"].ToString();
}

<form asp-action="ConsolidatedView" method="get" class="mb-3 d-flex gap-2 align-items-end">
    <div class="form-group">
        <label for="searchTerm">Search Bookings</label>
        <input type="text" name="searchTerm" class="form-control" placeholder="Enter Booking ID or Event Name" value="@searchTerm" />
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="ConsolidatedView" class="btn btn-secondary">Clear</a>
    </div>
</form>

<h2>Consolidated Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Event Name</th>
            <th>Booking Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.EventName</td>
                <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>