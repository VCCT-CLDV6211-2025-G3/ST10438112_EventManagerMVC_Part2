@model EventManagerMVC.Models.Venue

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<hr />
<h4>Are you sure you want to delete this venue?</h4>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Venue Name</dt>
            <dd class="col-sm-8">@Model.VenueName</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Capacity</dt>
            <dd class="col-sm-8">@Model.Capacity</dd>

            <dt class="col-sm-4">Image</dt>
            <dd class="col-sm-8">
                <img src="@Model.ImageURL" alt="Venue Image" style="max-height: 200px;" class="img-thumbnail" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="VenueID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>