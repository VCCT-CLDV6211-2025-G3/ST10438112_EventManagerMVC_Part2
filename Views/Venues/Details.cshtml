@model EventManagerMVC.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@(string.IsNullOrWhiteSpace(Model.ImageURL) ? Url.Content("~/images/No-Image-Placeholder.png") : Model.ImageURL)"
                 alt="Image of @Model.VenueName"
                 style="max-height: 200px;" class="img-thumbnail" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VenueID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>